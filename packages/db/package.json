{
  "name": "@repo/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:name": "prisma migrate dev --name",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:create-only": "prisma migrate dev --create-only",
    "db:refresh": "prisma migrate reset --force",
    "db:refresh:seed": "prisma migrate reset --force && prisma db seed",
    "db:push:reset": "prisma db push --force-reset",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/pg": "^8.11.10",
    "prisma": "latest"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.2.1",
    "@prisma/client": "latest",
    "pg": "^8.13.1"
  }
}